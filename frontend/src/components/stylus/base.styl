@import './vars.styl'
/* 初期化 */
*
  box-sizing: border-box

img
  max-width:100%
  height: auto

html
  font-size: 10px


body
  margin: 0
  padding: 0

a
  text-decoration: none

input::-webkit-input-placeholder
  padding-top: 0
  line-height: 1


/* 共通部分 */
#root
  margin: 0
  padding: 0
  width: 100%
  min-height: 100vh
  font-size: 1.6rem
  display: flex
  flex-direction: column
  justify-content: flex-start

#header
  display: flex
  justify-content: space-between
  align-items: center
  height:50px
  width: 100%
  padding: 10px 5%
  background: $thema-black
  position: fixed
  top:0
  z-index: 100

.header__title
  font-size: 3rem
  color: $theme-blue
  text-decoration: none


#content
  margin: 0
  flex: 1
  word-wrap: break-word
  min-height: calc(100vh - 50px)
  padding-top: 50px
  display: flex
  position: relative
  /* margin-top: 50px */

#main-content
  display: flex
  flex-direction: column
  justify-content: space-between
  width: 75%
  padding-top: 10px
  padding-right: 5%
  padding-left: 5%
  word-wrap: break-word

#footer
  flex:0
  display: flex
  flex-direction: column
  align-items: center
  justify-content: center
  margin: 5px 0

.link-field
  display: flex
  justify-content: center
  align-items: center

.copyright
  text-align: center


/*
記事用スタイルシート
 */
pre
  background: $pre-color
  color: white
  overflow-x: scroll

code
  overflow-x:auto
  white-space:pre


 .article-body h2
   margin: 10px 0
   border-bottom: dotted 1px gray
   font-size: 2.5rem

 .article-body h3
   margin: 10px 0
   border-bottom: dotted 1px gray


 .article-body h2::before
   content: ""
   width: 100%
   display: block
   margin-top:50px

 .article-body h3::before
   content: ""
   width: 100%
   display: block
   margin-top:50px

 .index
   display: flex
   flex-direction: column


 .index-h2item
   margin: 0
   font-size: 2rem

 .index-h3item
   margin-left:40px
   font-size: 2rem

 .index-h4item
   margin-left:80px
   font-size: 2rem


@media screen and (max-width:800px)
  #header
    padding: 0 1%


  #content
    /* margin-top: 50px */

  #main-content
    display: flex
    flex-direction: column
    justify-content: space-between
    width: 100%
    padding-top: 10px
    padding-left: 1%
    padding-right: 1%

  #side-content
    width: 60%
